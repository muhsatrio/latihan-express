extends layouts/main-layout.pug

block content
    main
        if products.length >0
            .grid
                each prod in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{prod.title}
                        div.card__content
                            h2.product__price $19.99
                            p.product__description asdasd
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products
                    
